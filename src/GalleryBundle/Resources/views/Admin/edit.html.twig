{% extends "GalleryBundle::Master/template.html.twig" %}

{% block title %}Edit picture{% endblock %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}

{% block nav %}
	{% for key,value in menu %}
		<li><a href="{{ value }}">{{ key }}</a></li>
	{% endfor %}
{% endblock %}

{% block content %}
	<h1>Add picture</h1>
	
	{{ form_start(form) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}
	
	<h2>Preview</h2>
	<img width="200px" height="200px" src="{{ asset(picture.filename, absolute=true) }}" alt="{{ picture.name|e }}" />
	
{% endblock %}
